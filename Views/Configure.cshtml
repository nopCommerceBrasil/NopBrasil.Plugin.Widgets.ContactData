@model NopBrasil.Plugin.Widgets.ContactData.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}
<form asp-controller="WidgetsContactData" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <a href="http://www.nopcommercebrasil.com"><img src="/Plugins/Widgets.ContactData/Content/Images/nopCommerceBrasil.png"></a>
                    <br />
                    <p>
                        Este plugin foi desenvolvido por <a href="http://www.nopcommercebrasil.com">NopCommerce Brasil - http://www.nopcommercebrasil.com</a><br />
                        Em caso de dúvidas ou problemas por favor entre em contato conosco através do email <a href="mailto:nopcommercebrasil@nopcommercebrasil.com" target="_top">nopcommercebrasil@nopcommercebrasil.com</a><br />
                        Este plugin é open-source e seu código-fonte está disponível no <a href="https://github.com/nopCommerceBrasil">GitHub do NopCommerce Brasil</a> no repositório <a href="https://github.com/nopCommerceBrasil/NopBrasil.Plugin.Widgets.ContactData">NopBrasil.Plugin.Widgets.ContactData</a>
                    </p>
                    <br />

                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="WidgetZone" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="WidgetZone" />
                        <span asp-validation-for="WidgetZone"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ViewMode" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="ViewMode" asp-items="Model.ViewModeAvailable" />
                        <span asp-validation-for="ViewMode"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CompanyName" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CompanyName" />
                        <span asp-validation-for="CompanyName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="NationalRegisterCorporate" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="NationalRegisterCorporate" />
                        <span asp-validation-for="NationalRegisterCorporate"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Address" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Address" />
                        <span asp-validation-for="Address"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="PostalCode" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PostalCode" />
                        <span asp-validation-for="PostalCode"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="City" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="City" />
                        <span asp-validation-for="City"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="State" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="State" />
                        <span asp-validation-for="State"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="District" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="District" />
                        <span asp-validation-for="District"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="PhoneNumber" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PhoneNumber" />
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Email" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>